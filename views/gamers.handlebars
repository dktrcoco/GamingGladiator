<header>
    <h1>Olympians! Prepare Yourselves!!</h1>
</header>

<div class="container1">
    <div class="username-gamertag">
        <div id="enter-names" class="card">
            <div class="form-group">
                <label for="exampleUsername1">
                    <h3 class="card-header"> Enter Competitors Here</h3>
                </label>
                <div class="card-body">
                    <input type="text" class="form-control" id="usernameInput" placeholder="Enter Username/Gamertag">
                </div>
            </div>
        </div>
        <br>
        <div id="choose-battle-mode" class="card">
            <h3 class="card-header">Choose Battle Mode</h3>
            <div class="card-body">
                <div class="text-center">
                    <button class="btn btn-outline-light btn-lg selectMode" value="High Score Hero">
                        High Score Hero</button>
                    <button class="btn btn-outline-light btn-lg selectMode" value="King of the Kills">
                        King of the Kills</button>
                    <button class="btn btn-outline-light btn-lg selectMode" value="K/D Clash">
                        K/D Clash</button>
                </div>
            </div>
        </div>
        <br>
        <div id="choose-trial-length" class="card">
            <h3 class="card-header">Choose Trial Length</h3>
            <div class="card-body">
                <div class="text-center">
                    <button class="btn btn-outline-light btn-lg one-round-button">1 match</button>
                    <button class="btn btn-outline-light btn-lg three-round-button">3 matches</button>
                    <button class="btn btn-outline-light btn-lg five-round-button">5 matches</button>
                </div>
            </div>
        </div>
    </div>
</div>

<br>

<div class="buttonHolder">
    <a class="btn btn-outline-dark btn-lg" id="rules-button" href="./welcome.html" role="button">Back to Rules</a>
    <button class="btn btn-outline-dark btn-lg" id="submit">Results</button>
</div>

<!-- bar chart canvas element -->
<canvas id="overData" width="600" height="400"></canvas>
<!-- importing gamers.js -->
<script type="text/javascript" src="js/gamers.js"></script>